{{>layout/home-header}}

<div class="container">
    {{>layout/bodyheader}}

    <table class="table table-striped">
        <thead class = "thead strong">
        <tr>
            <th>번호</th>
            <th>고객명</th>
            <th>공연명</th>
            <th>예매일시</th>
            <th>수량</th>
            <th>상태</th>
            <th></th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#bookings}}
            <tr>
                <td>{{bookId}}</td>
                <td>{{custName}}</td>
                <td>{{itemName}}</td>
                <td>{{bookDt}}</td>
                <td>{{count}}</td>
                <td>{{bookingStatus}}</td>
                <td> {{#isBooking}}
                    <button type ="button" class="btn btn-sm btn-danger cancel-booking">취소</button>
                {{/isBooking}} </td>
            </tr>
        {{/bookings}}
        </tbody>
    </table>

    {{>layout/bodyfooter}}
</div>

{{>layout/footer}}